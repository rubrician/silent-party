<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="preferenceTheme">@style/PrefTheme</item>
        <item name="editTextStyle">@style/EditTextTheme</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="PrefTheme" parent="@style/PreferenceThemeOverlay">
        <item name="android:textColorPrimary">?android:attr/textColorPrimaryInverse</item>
        <item name="android:textColorSecondary">?android:attr/textColorSecondaryInverse</item>
        <item name="android:textColorTertiary">?android:attr/textColorTertiaryInverse</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="CheckBoxTheme" parent="AppTheme">
        <item name="colorAccent">@color/white</item>
        <item name="android:textColor">?android:attr/textColorPrimaryInverse</item>
        <item name="android:textColorSecondary">?android:attr/textColorSecondaryInverse</item>
    </style>

    <style name="EditTextTheme" parent="android:Widget.EditText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">?android:attr/textColorHintInverse</item>
    </style>

    <style name="NavigationTheme" parent="AppTheme" >
        <item name="android:textColorSecondary">?android:attr/textColorSecondaryInverse</item>
    </style>

</resources>
